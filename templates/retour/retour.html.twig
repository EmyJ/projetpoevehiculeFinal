{% extends 'base.html.twig' %}

{% block title %}Retour véhicule{% endblock %}

{% block body %}

    <h1>Retour Véhicule : {{ voiture.Reference }}</h1>



        {{ form_start(retourForm, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="col-md-6 form-line">

            <div class="form-group">
                {{ form_label(retourForm.date, "Date de début d'utilisation : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(retourForm.date) }}
                <div class="col-sm-9">
                    {{ form_widget(retourForm.date) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(retourForm.natureDeplacement, "Nature du déplacement : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(retourForm.natureDeplacement) }}
                <div class="col-sm-9">
                    {{ form_widget(retourForm.natureDeplacement, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(retourForm.lieu, "Lieu de recption véhicule : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(retourForm.lieu) }}
                <div class="col-sm-9">
                    {{ form_widget(retourForm.lieu, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(retourForm.destination, "Destination", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(retourForm.destination) }}
                <div class="col-sm-9">
                    {{ form_widget(retourForm.destination, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <hr>

            <div class="form-group">
                <div class="col-sm-10">
                    {{ form_label(retourForm.litreCarburant, "Carburant", {'label_attr': {'class': 'col-sm-8 control-label'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_errors(retourForm.litreCarburant) }}
                <div class="col-sm-6">
                    {{ form_widget(retourForm.litreCarburant, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-sm-6">
                    {{ form_widget(retourForm.montantCarburant, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <hr>

            <div class="form-group">
                <div class="col-sm-10">
                    {{ form_label(retourForm.vehicule, "Kilomètres", {'label_attr': {'class': 'col-sm-8 control-label'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_errors(retourForm.vehicule) }}
                <div class="col-sm-6">
                    {{ form_widget(retourForm.vehicule, {'attr': {'class': 'form-control' }}) }}
                </div>

                <div class="col-sm-6">
                    {{ form_widget(retourForm.kmParcourus, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(retourForm.conduteur, "Conducteur : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(retourForm.conduteur) }}
                {#{% for conduteurs in retourForm.conduteur %}#}
                <div class="col-sm-9">
                    {{ form_errors(retourForm.conduteur) }}
                    {{ form_widget(retourForm.conduteur, {'attr': {'class': 'form-control'}}) }}
                </div>
                {#{% endfor %}#}
            </div>

            <div class="form-group">
                {{ form_label(retourForm.commentaire, "Commentaire : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(retourForm.commentaire) }}
                <div class="col-sm-9">
                    {{ form_widget(retourForm.commentaire, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-9">
                    <input type="submit" class="btn btn-primary center-block" value="Valider">
                </div>
            </div>
        </div>

        {{ form_end(retourForm) }}

{% endblock %}
