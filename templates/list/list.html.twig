{% extends 'base.html.twig' %}

{% block title %}Liste des véhicule{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                <h1 class="text-center">Liste des véhicules</h1>

                <table class="table">
                    <thead>
                    <tr class="active">
                        <th>Réferénce Véhicule</th>
                        <th>Kilométrage</th>
                        <th>Type de carburant</th>
                        <th>Lieu</th>
                        <th>Disponibilité</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for vehicule in list %}
                    <tr>
                        <td>{{ vehicule.reference }}</td>
                        <td>{{ vehicule.kilometrage }} km</td>
                        <td>{{ vehicule.typeCarburant.type }}</td>
                        <td>{{ vehicule.lieu.lieu }}</td>
                        <td class="nonDispo">Non Disp.</td>
                        <td>
                            <a href="#"><button type="button" class="btn btn-default">Retourner</button></a>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {#{% if is_granted("ROLE_ADMIN") %}#}
                <a href="{{ path('voiture_index') }}"><button type="button" class="btn btn-primary pull-right">
                    Ajouter un véhicule
                </button></a>
                {#{% endif %}#}
            </div>
        </div>
    </div>

{% endblock %}
